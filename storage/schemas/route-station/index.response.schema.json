{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Routes Stations Index Response",
  "description": "Response schema for listing all routes with their related stations",
  "type": "object",
  "required": ["data"],
  "additionalProperties": false,
  "properties": {
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "route_id",
          "route_name",
          "stations"
        ],
        "additionalProperties": false,
        "properties": {
          "route_id": {
            "type": "integer"
          },
          "route_name": {
            "type": ["string", "null"]
          },
          "stations": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "station_id",
                "station_name",
                "order"
              ],
              "additionalProperties": false,
              "properties": {
                "station_id": {
                  "type": "integer"
                },
                "station_name": {
                  "type": ["string", "null"]
                },
                "order": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    }
  }
}
