{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Route Station List Response",
  "description": "List of station-route relations",
  "type": "object",
  "required": ["data"],
  "properties": {
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "station_id",
          "station_name",
          "route_id",
          "route_name"
        ],
        "properties": {
          "id": { "type": "integer" },
          "station_id": { "type": "integer" },
          "station_name": {
            "type": ["string", "null"]
          },
          "route_id": { "type": "integer" },
          "route_name": {
            "type": ["string", "null"]
          }
        }
      }
    }
  },
  "additionalProperties": false
}
