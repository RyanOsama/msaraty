{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Update Route Response",
  "description": "Response returned after updating a route",
  "type": "object",
  "required": ["message", "route"],
  "properties": {
    "message": { "type": "string" },
    "route": {
      "type": "object",
      "required": ["id", "route_name", "created_at", "updated_at"],
      "properties": {
        "id": { "type": "integer" },
        "route_name": { "type": "string" },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "additionalProperties": false
}
