{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Routes List Response",
  "description": "Response returned when listing all routes",
  "type": "object",
  "required": ["routes"],
  "properties": {
    "routes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "route_name", "created_at", "updated_at"],
        "properties": {
          "id": { "type": "integer" },
          "route_name": { "type": "string" },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
