{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stations List Response",
  "description": "Response returned when listing all stations",
  "type": "object",
  "required": ["stations"],
  "properties": {
    "stations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "station_name",
          "location_x",
          "location_y",
          "description",
          "created_at"
        ],
        "properties": {
          "id": { "type": "integer" },
          "station_name": { "type": "string" },
          "location_x": { "type": "number" },
          "location_y": { "type": "number" },
          "description": {
            "type": ["string", "null"]
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
