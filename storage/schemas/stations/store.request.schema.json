{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Create Station Request",
  "description": "Data required to create a new station",
  "type": "object",
  "required": ["station_name", "location_x", "location_y"],
  "properties": {
    "station_name": {
      "type": "string",
      "maxLength": 255
    },
    "location_x": {
      "type": "number"
    },
    "location_y": {
      "type": "number"
    },
    "description": {
      "type": ["string", "null"]
    }
  },
  "additionalProperties": false
}
